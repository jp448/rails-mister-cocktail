<div class="pink-bg container d-flex flex-column justify-content-center align-items-center mt-5 shadow-lg p-3 mb-5">
  <h1 class="title m-2 p-3"><%= @cocktail.name %><span class="small"><%= link_to "<i class='far fa-edit'></i>".html_safe, edit_cocktail_path(@cocktail)%></span></h1>
  <div class="card-category rounded" style="background-image: url(<%= @cocktail.image_url %>)">
  </div>
  <p class="m-2 p-2">Ingredient <span class ="pl-2"><%= link_to "<i class='fas fa-plus'></i>".html_safe, new_cocktail_dose_path(@cocktail)%></span></p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= Ingredient.find(dose.ingredient_id).name %>
      <span><%= link_to "<i class='fas fa-minus'></i>".html_safe, dose, method: :delete, data: { confirm: 'Are you sure?' }%></span>
    </li>
    <% end %>
  </ul>
</div>


