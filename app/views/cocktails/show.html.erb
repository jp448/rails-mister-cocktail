<h1><%= @cocktail.name %></h1>
<p>Ingredient <span class ="pl-2"><%= link_to "<i class='fas fa-plus'></i>".html_safe, new_cocktail_dose_path(@cocktail)%></span></p>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= Ingredient.find(dose.ingredient_id).name %>
    <span><%= link_to "<i class='fas fa-minus'></i>".html_safe, dose, method: :delete, data: { confirm: 'Are you sure?' }%></span>
  </li>
  <% end %>
</ul>



